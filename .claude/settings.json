{
  "permissions": {
    "allow": [
      "Bash(git :*)", "Bash(gh :*)", "Bash(swift :*)", "Bash(swiftformat :*)",
      "Bash(swiftlint :*)", "Bash(xcodebuild :*)", "Bash(cat :*)", "Bash(ls :*)", 
      "Bash(grep :*)", "Bash(find :*)", "Bash(curl :*)", "Bash(mkdir :*)", "Bash(jq :*)",
      "Read(*)", "Edit(*)", "Write(*)", "Glob(*)", "Grep(*)", "Task(*)"
    ],
    "deny": [
      "Bash(rm -rf /)", "Bash(sudo rm :*)", "Bash(chmod 777 :*)",
      "Bash(git push --force origin main)", "Read(.env)", "Read(**/*.key)"
    ]
  },
  "hooks": {
    "PostToolUse": [{
      "matcher": {"tools": ["EditTool", "WriteTool"]},
      "hooks": [{"type": "command", "command": "swiftformat \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"}]
    }],
    "PreToolUse": [{
      "matcher": {"tools": ["BashTool"]},
      "hooks": [{"type": "command", "command": "mkdir -p .claude/audit && echo \"$(date -u +%FT%TZ) $CLAUDE_TOOL_INPUT\" >> .claude/audit/commands.log 2>/dev/null || true"}]
    }]
  },
  "env": {"CLAUDE_BORIS_VERSION": "2.0.0"}
}
